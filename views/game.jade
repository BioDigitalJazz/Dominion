extends layout

block content
  div(class="container")
    div(id="column-left")
      div(id="area-supply-nonaction")
        div(class="col-supply-nonaction")
          div(class="supply-curse" id="curseCard" style="background-image: url(../public/images/cards/curse.jpg)")
          div(class="supply-victory" id="estateCard")
          div(class="supply-victory" id="duchyCard")
          div(class="supply-victory" id="provinceCard")
        div(class="col-supply-nonaction")
          div(class="supply-treasure" id="copperCard")
          div(class="supply-treasure" id="silverCard")
          div(class="supply-treasure" id="goldCard")
      div(id="area-player-aside")
        div(class="player-aside")
        div(class="player-aside")
    div(id="column-middle")
      div(id="area-supply-kingdom")
        div(class="row-supply-kingdom")
          div(class="supply-kingdom" id="kcard0")
          div(class="supply-kingdom" id="kcard1")
          div(class="supply-kingdom" id="kcard2")
          div(class="supply-kingdom" id="kcard3")
          div(class="supply-kingdom" id="kcard4")
        div(class="row-supply-kingdom")
          div(class="supply-kingdom" id="kcard5")
          div(class="supply-kingdom" id="kcard6")
          div(class="supply-kingdom" id="kcard7")
          div(class="supply-kingdom" id="kcard8")
          div(class="supply-kingdom" id="kcard9")
      div(id="area-play-center")
        div(id="turn-stats")
          p Action: 1 <br />
          p Buy: 1 <br />
          p Coins: 3 <br />
        div(id="play-prompt")
          p Your turn! Play an action.
        div(id="play-area")
      div(id="area-player-hand")
    div(id="column-right")
      div(id="area-log")
        div(id="log-box")
          p. 
            ---------- tfc2014: turn 1 ---------- <br />
            tfc2014 - plays 4 Copper <br />
            tfc2014 - buys Smithy <br />
            tfc2014 - gains Smithy <br />
            tfc2014 - draws Estate, Copper, Copper, Copper, Estate <br />
          p.
            ---------- Villager Bot: turn 1 ---------- <br />
            Villager Bot - plays 3 Copper <br />
            Villager Bot - buys Silver <br />
            Villager Bot - gains Silver <br />
            Villager Bot - draws Copper, Copper, Estate, Copper, Copper <br />
      div(id="area-player-scroll")
    script(src='/javascripts/card.js')
    script(src='/javascripts/player.js')     
    script(src='/javascripts/game.js')
