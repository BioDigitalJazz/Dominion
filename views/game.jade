extends layout

block content
  div(class="container")
    div(id="column-left")
      div(id="area-supply-nonaction")
        div(class="col-supply-nonaction")
          div(class="div-supply-nonaction")
            img(class="supply-nonaction" id="curseCard" src="/images/cards/curse.jpg")
            img(class="supply-nonaction-big" src="/images/cards/curse.jpg")
          div(class="div-supply-nonaction")
            img(class="supply-nonaction" id="estateCard" src="/images/cards/estate.jpg")
            img(class="supply-nonaction-big" src="/images/cards/estate.jpg")
          div(class="div-supply-nonaction")
            img(class="supply-nonaction" id="duchyCard" src="/images/cards/duchy.jpg")
            img(class="supply-nonaction-big" src="/images/cards/duchy.jpg")
          div(class="div-supply-nonaction")
            img(class="supply-nonaction" id="provinceCard" src="/images/cards/province.jpg")
            img(class="supply-nonaction-big" src="/images/cards/province.jpg")
        div(class="col-supply-nonaction")
          div(class="div-supply-nonaction" id="div-copper")
            img(class="supply-nonaction" id="copperCard" src="/images/cards/copper.jpg")
            img(class="supply-nonaction-big" src="/images/cards/copper.jpg")
          div(class="div-supply-nonaction")
            img(class="supply-nonaction" id="silverCard" src="/images/cards/silver.jpg")
            img(class="supply-nonaction-big" src="/images/cards/silver.jpg")
          div(class="div-supply-nonaction")
            img(class="supply-nonaction" id="goldCard" src="/images/cards/gold.jpg")
            img(class="supply-nonaction-big" src="/images/cards/gold.jpg")
      div(id="area-player-aside")
        img(class="player-aside" id="discard-pile" src="/images/cards/feast.jpg")
        img(class="player-aside" id="deck" src="/images/cards/back.jpg")
    div(id="column-middle")
      div(id="area-supply-kingdom")
        div(class="row-supply-kingdom")
          img(class="supply-kingdom" id="kcard0")
          img(class="supply-kingdom-orig")
          img(class="supply-kingdom" id="kcard1")
          img(class="supply-kingdom-orig")
          img(class="supply-kingdom" id="kcard2")
          img(class="supply-kingdom-orig")
          img(class="supply-kingdom" id="kcard3")
          img(class="supply-kingdom-orig")
          img(class="supply-kingdom" id="kcard4")
          img(class="supply-kingdom-orig")
        div(class="row-supply-kingdom")
          img(class="supply-kingdom" id="kcard5")
          img(class="supply-kingdom-orig")
          img(class="supply-kingdom" id="kcard6")
          img(class="supply-kingdom-orig")
          img(class="supply-kingdom" id="kcard7")
          img(class="supply-kingdom-orig")
          img(class="supply-kingdom" id="kcard8")
          img(class="supply-kingdom-orig")
          img(class="supply-kingdom" id="kcard9")
          img(class="supply-kingdom-orig")
      div(id="area-play-center")
        div(id="turn-stats")
          table
            tr 
              td Action:
              td(id="actionCount") 1
            tr
              td Buy:
              td(id="buyCount") 1
            tr
              td Coins:
              td(id="coinCount") 0
        div(id="play-prompt")
          Your turn! Play an action.
        div(id="play-area")
      div(id="area-player-hand")
    div(id="column-right")
      div(id="area-log")
        div(id="log-box")
          p. 
            ---------- tfc2014: turn 1 ---------- <br />
            tfc2014 - plays 4 Copper <br />
            tfc2014 - buys Smithy <br />
            tfc2014 - gains Smithy <br />
            tfc2014 - draws Estate, Copper, Copper, Copper, Estate
          p.
            ---------- Villager Bot: turn 1 ---------- <br />
            Villager Bot - plays 3 Copper <br />
            Villager Bot - buys Silver <br />
            Villager Bot - gains Silver <br />
            Villager Bot - draws Copper, Copper, Estate, Copper, Copper
      div(id="area-player-scroll")
    script(src='/javascripts/card.js')
    script(src='/javascripts/player.js')     
    script(src='/javascripts/game.js')
